<%= render :partial => 'application/menu' %>

<h1>Settings</h1>
<p id="notice"><%= notice %></p>



<%= form_for(Setting.new, url: settings_path) do |f| %>
  <div class="form-group">
    <label class="control-label">Name</label>
    <%= f.text_field :event_name, value: Setting.event_name, class: "form-control"  %>
  </div>

  <div class="form-group">
    <label class="control-label">Date</label>
    <%= f.text_field :event_date, value: Setting.event_date, class: "form-control"  %>
  </div>

  <div class="form-group">
    <label class="control-label">Hours</label>
    <%= f.text_field :event_hours, value: Setting.event_hours, class: "form-control"  %>
  </div>

  <div class="form-group">
    <label class="control-label">Description</label>
    <%= f.text_field :event_desc, value: Setting.event_desc, class: "form-control"  %>
  </div>

  <div class="form-group">
    <label class="control-label">Owner e-mail</label>
    <%= f.text_field :event_owner, value: Setting.event_owner, class: "form-control"  %>
  </div>

   <%= submit_tag 'Save', :class => 'btn btn-primary' %>


<% end %>
