<h1><%= Settings.event_name %></h1>
<h2><%= Settings.event_date %></h2>

<div><%= raw (' '+Settings.event_desc).gsub(/\n/, '<br>') %></div>
<p id="notice"><%= notice %></p>

<%= form_tag schedule_path, :method => :put do %>
<table id="schedule">
  <thead>
    <tr>
      <th width="80">uur/taak</th>
      <% @postjes.each do |postje| %>
        <th><%= postje.name %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @timeslots.each do |timeslot| %>
      <tr>
        <th width="80"><%= timeslot.name %></th>
          <% @postjes.each do |postje| %>
            <td>
              <%= check_box_tag('volunteers_for[]', "#{timeslot.id}::#{postje.id}", false) unless @locks.include?("#{timeslot.id}::#{postje.id}") %>
              <span class="note"><%= @notes["#{timeslot.id}::#{postje.id}"].html_safe %></span>
              <ul>
              <% Application.where({:timeslot_id => timeslot.id, :postje_id => postje.id}).each do |app| %>
                <li><%= app.volunteer.name %></li>
              <% end %>
              </ul>
            </td>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= submit_tag 'Voeg mij toe voor selectie', :id => 'add_me' %>

<div id="wrapper" style="display: none;">
  <div id="shadow"></div>
  <div id="box">
    Naam: <%= text_field_tag 'name', nil, :size => 40 %><br>
    Email: <%= text_field_tag 'email', nil, :size => 40 %><br>
    Klas: <%= text_field_tag 'klas', nil, :size => 40 %><br>
    Leerling: <%= text_field_tag 'leerling', nil, :size => 40 %><br>
    <br>
    <%= submit_tag 'Terug', :id => 'cancel' %>
    <%= submit_tag 'Verstuur' %>
  </div>
</div>

<% end %>
